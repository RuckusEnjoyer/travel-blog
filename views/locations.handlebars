      <div class="form-group">
        <label for="location-name">Location:</label>
        <input class="form-input" type="text" id="location-name" name="location-name" />
      </div>

      <div class="form-group">
        <button type="submit" id="searchbtn" class="btn btn-primary">Create</button>
      </div>
    </form>
</div>
